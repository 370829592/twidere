<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:key="global_settings"
	android:title="@string/global_settings">

	<PreferenceCategory
		android:key="cat_lookNfeel"
		android:title="@string/look_and_feel">
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="dark_theme"
			android:summary="@string/dark_theme_summary"
			android:title="@string/dark_theme"/>
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="display_profile_image"
			android:summary="@string/display_profile_image_summary"
			android:title="@string/display_profile_image"/>
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="bottom_actions"
			android:summary="@string/bottom_actions_summary"
			android:title="@string/bottom_actions"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_content"
		android:title="@string/content">
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="enable_filters"
			android:summary="@string/filters_summary"
			android:title="@string/filters"/>

		<PreferenceScreen
			android:key="filters_list"
			android:title="@string/filters_list">
			<intent
				android:action="org.mariotaku.twidere.FILTERS"
				android:targetPackage="org.mariotaku.twidere"/>
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_storage"
		android:title="@string/storage">
		<org.mariotaku.preferences.SeekBarPreference
			maxValue="300"
			minValue="50"
			android:defaultValue="100"
			android:key="item_limit"
			android:summary="@string/item_limit_summary"
			android:title="@string/item_limit"/>

		<Preference
			android:key="clear_cache"
			android:summary="@string/clear_cache_summary"
			android:title="@string/clear_cache"/>
		<Preference
			android:key="clear_databases"
			android:summary="@string/clear_databases_summary"
			android:title="@string/clear_databases"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_api"
		android:title="@string/api">
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="gzip_compressing"
			android:summary="@string/gzip_compressing_summary"
			android:title="@string/gzip_compressing"/>

		<EditTextPreference
			android:dialogMessage="@string/warn_expert_only"
			android:dialogTitle="@string/consumer_key"
			android:key="consumer_key"
			android:singleLine="true"
			android:summary="@string/consumer_key_summary"
			android:title="@string/consumer_key"/>
		<EditTextPreference
			android:dialogMessage="@string/warn_expert_only"
			android:dialogTitle="@string/consumer_secret"
			android:key="consumer_secret"
			android:singleLine="true"
			android:summary="@string/consumer_secret_summary"
			android:title="@string/consumer_secret"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_proxy"
		android:title="@string/proxy">
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="enable_proxy"
			android:summary="@string/proxy_summary"
			android:title="@string/proxy"/>

		<EditTextPreference
			android:dependency="enable_proxy"
			android:dialogTitle="@string/http_proxy"
			android:key="http_proxy"
			android:singleLine="true"
			android:title="@string/http_proxy"/>
		<EditTextPreference
			android:dependency="enable_proxy"
			android:dialogTitle="@string/http_proxy_username"
			android:key="http_proxy_username"
			android:singleLine="true"
			android:title="@string/http_proxy_username"/>
		<EditTextPreference
			android:dependency="enable_proxy"
			android:dialogTitle="@string/http_proxy_password"
			android:key="http_proxy_password"
			android:singleLine="true"
			android:title="@string/http_proxy_password"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_about"
		android:title="@string/about">
		<PreferenceScreen
			android:summary="@string/about_summary"
			android:title="@string/about">
			<intent
				android:action="org.mariotaku.twidere.ABOUT"
				android:targetPackage="org.mariotaku.twidere"/>
		</PreferenceScreen>
		<PreferenceScreen
			android:summary="@string/license_summary"
			android:title="@string/license">
			<intent
				android:action="org.mariotaku.twidere.LICENSE"
				android:targetPackage="org.mariotaku.twidere"/>
		</PreferenceScreen>
	</PreferenceCategory>

</PreferenceScreen>